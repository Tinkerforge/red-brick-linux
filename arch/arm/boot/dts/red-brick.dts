/dts-v1/;
#include "sun5i-a10s.dtsi"
#include "sunxi-common-regulators.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>
#include <dt-bindings/pinctrl/sun4i-a10.h>

/ {
	model = "RED Brick";
	compatible = "olimex,a10s-olinuxino-micro", "allwinner,sun5i-a10s";

	aliases {
		spi0 = &spi0;
		spi1 = &spi1;
		serial3 = &uart3;
	};

	chosen {
		stdout-path = "serial3:115200n8";
	};

	connector {
		compatible = "hdmi-connector";
		type = "d";

		port {
			hdmi_con_in: endpoint {
				remote-endpoint = <&hdmi_out_con>;
			};
		};
	};

	leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&led_pins_red_brick>;

		running {
			label = "red-brick:led:running";
			linux,default-trigger = "heartbeat";
			gpios = <&pio 2 5 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};

		error {
			label = "red-brick:led:error";
			gpios = <&pio 2 6 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};
	};
};

&be0 {
	status = "okay";
};

&ehci0 {
	status = "okay";
};

&hdmi {
	status = "okay";
};

&hdmi_out {
	hdmi_out_con: endpoint {
		remote-endpoint = <&hdmi_con_in>;
	};
};

&i2c0 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_pins_a>;
	status = "okay";

	axp152: pmic@30 {
		reg = <0x30>;
		interrupts = <0>;
	};
};

#include "axp152.dtsi"

&i2c1 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c1_pins_a>;
	status = "okay";
};

&i2c2 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c2_pins_a>;
	status = "okay";
};

&mmc0 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc0_pins_a>;
	vmmc-supply = <&reg_vcc3v3>;
	bus-width = <4>;
	cd-inverted;
	status = "okay";
};

&ohci0 {
	status = "okay";
};

&otg_sram {
	status = "okay";
};

&pio {
	led_pins_red_brick: led_pins@0 {
		pins = "PC5", "PC6";
		function = "gpio_out";
		drive-strength = <20>;
	};

	usb1_vbus_pin_olinuxino_m: usb1_vbus_pin@0 {
		pins = "PB10";
		function = "gpio_out";
	};

	uart3_pins_a: uart3@0 {
		pins = "PC16", "PC17";
	};

	uart3_cts_rts_pins_a: uart3-cts-rts@0 {
		pins = "PC18", "PC19";
	};

	spi0_pins_a: spi0@0 {
		allwinner,pins = "PC0", "PC1", "PC2", "PC3";
		allwinner,function = "spi0";
		allwinner,drive = <SUN4I_PINCTRL_10_MA>;
		allwinner,pull = <SUN4I_PINCTRL_PULL_DOWN>;
	};

	spi1_pins_a: spi1@0 {
		allwinner,pins = "PG9", "PG10", "PG11", "PG12", "PG13";
		allwinner,function = "spi1";
		allwinner,drive = <SUN4I_PINCTRL_10_MA>;
		allwinner,pull = <SUN4I_PINCTRL_PULL_DOWN>;
	};

  /*
   * On RED Brick I2C-2 is used by Brickd. With kernel image 1.10 it was observed
   * that a stack upon RED Brick with 5 master bricks and on the top an ethernet
   * extension causes the extension not being properly detected.
   *
   * The following explicit I2C-2 pin configuration seems to fix that problem.
   */
  i2c2_pins_a: i2c2@0 {
    allwinner,drive = <SUN4I_PINCTRL_40_MA>;
    allwinner,pull = <SUN4I_PINCTRL_PULL_UP>;
  };
};

&reg_usb1_vbus {
	pinctrl-0 = <&usb1_vbus_pin_olinuxino_m>;
	gpio = <&pio 1 10 GPIO_ACTIVE_HIGH>;
	status = "okay";
};

&spi0 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_pins_a>;
	status = "okay";

	spi0_0 {
		compatible = "spidev";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0>;
		spi-max-frequency = <8000000>;
	};
};

&spi1 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi1_pins_a>;
	status = "okay";

	spi1_0 {
		compatible = "w5x00";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0>;
		spi-max-frequency = <8000000>;
	};
};

&tcon0 {
	status = "okay";
};

&uart3 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart3_pins_a>, <&uart3_cts_rts_pins_a>;
	status = "okay";
};

&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	pinctrl-names = "default";
	usb1_vbus-supply = <&reg_usb1_vbus>;
	status = "okay";
};

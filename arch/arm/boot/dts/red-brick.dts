/dts-v1/;
#include "sun5i-a10s-red-brick.dtsi"
#include "sunxi-common-regulators.dtsi"

#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/input/input.h>

/ {
	model = "RED Brick";
	compatible = "olimex,a10s-olinuxino-micro", "allwinner,sun5i-a10s";

	aliases {
		spi0 = &spi0;
		spi1 = &spi1;
		serial0 = &uart0;
		serial1 = &uart2;
		serial2 = &uart3;
	};

	chosen {
		stdout-path = "serial2:115200n8";
	};

	leds {
		compatible = "gpio-leds";
		pinctrl-names = "default";
		pinctrl-0 = <&led_pins_red_brick>;

		running {
			label = "red-brick:led:running";
      linux,default-trigger = "heartbeat";
			gpios = <&pio 2 5 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};

		error {
			label = "red-brick:led:error";
			gpios = <&pio 2 6 GPIO_ACTIVE_HIGH>;
			default-state = "off";
		};
	};
};

&ehci0 {
	status = "okay";
};

&i2c0 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c0_pins_a>;
	status = "okay";

	axp152: pmic@30 {
		reg = <0x30>;
		interrupts = <0>;
	};
};

#include "axp152.dtsi"

&i2c1 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c1_pins_a>;
	status = "okay";

	at24@50 {
		compatible = "atmel,24c16";
		pagesize = <16>;
		reg = <0x50>;
		read-only;
	};
};

&i2c2 {
	pinctrl-names = "default";
	pinctrl-0 = <&i2c2_pins_a>;
	status = "okay";
};

&lradc {
	vref-supply = <&reg_vcc3v0>;
	status = "okay";

	button@191 {
		label = "Volume Up";
		linux,code = <KEY_VOLUMEUP>;
		channel = <0>;
		voltage = <191274>;
	};

	button@392 {
		label = "Volume Down";
		linux,code = <KEY_VOLUMEDOWN>;
		channel = <0>;
		voltage = <392644>;
	};

	button@601 {
		label = "Menu";
		linux,code = <KEY_MENU>;
		channel = <0>;
		voltage = <601151>;
	};

	button@795 {
		label = "Enter";
		linux,code = <KEY_ENTER>;
		channel = <0>;
		voltage = <795090>;
	};

	button@987 {
		label = "Home";
		linux,code = <KEY_HOMEPAGE>;
		channel = <0>;
		voltage = <987387>;
	};
};

&mmc0 {
	pinctrl-names = "default";
	pinctrl-0 = <&mmc0_pins_a>;
	vmmc-supply = <&reg_vcc3v3>;
	bus-width = <4>;
	cd-inverted;
	status = "okay";
};

&ohci0 {
	status = "okay";
};

&otg_sram {
	status = "okay";
};

&pio {
	led_pins_red_brick: led_pins@0 {
		pins = "PC5", "PC6";
		function = "gpio_out";
		drive-strength = <20>;
	};

	usb1_vbus_pin_olinuxino_m: usb1_vbus_pin@0 {
		pins = "PB10";
		function = "gpio_out";
	};
};

&reg_usb1_vbus {
	pinctrl-0 = <&usb1_vbus_pin_olinuxino_m>;
	gpio = <&pio 1 10 GPIO_ACTIVE_HIGH>;
	status = "okay";
};

&spi0 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi0_pins_a>;
	status = "okay";

	spi0_0 {
		compatible = "rohm,dh2228fv";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0>;
		spi-max-frequency = <8000000>;
	};
};

&spi1 {
	pinctrl-names = "default";
	pinctrl-0 = <&spi1_pins_a>;
	status = "okay";

	spi1_0 {
		compatible = "w5x00";
		#address-cells = <1>;
		#size-cells = <0>;
		reg = <0>;
		spi-max-frequency = <8000000>;
	};
};

&uart0 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart0_pins_a>;
	status = "okay";
};

&uart2 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart2_pins_b>;
	status = "okay";
};

&uart3 {
	pinctrl-names = "default";
	pinctrl-0 = <&uart3_pins_a>;
	status = "okay";
};

&usb_otg {
	dr_mode = "otg";
	status = "okay";
};

&usbphy {
	pinctrl-names = "default";
	usb1_vbus-supply = <&reg_usb1_vbus>;
	status = "okay";
};
